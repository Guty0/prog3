    private void jTextField3ActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
    }                                           

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
       
        
        int n2= Integer.parseInt(jTextField2.getText());
        int n3= Integer.parseInt(jTextField3.getText());
        int n4= Integer.parseInt(jTextField4.getText());
       
        DefaultCategoryDataset datos = new DefaultCategoryDataset();
        
        datos.setValue(n2,"Programacion","Felipe");
        datos.setValue(n3,"Programacion","Juan");
        datos.setValue(n4,"Programacion","Daniel");

        JFreeChart grafico_barras = ChartFactory.createBarChart3D(
         "Calificaciones de Programacion",
         "Estudiantes de Programacion",
         "Calificacion",
         datos,
         PlotOrientation.VERTICAL,
         true,
         true,
         false
        
        );
        
        ChartPanel panel = new ChartPanel(grafico_barras);
        panel.setMouseWheelEnabled(true);
        panel.setPreferredSize(new Dimension(400,200));
        
        jPanel1.setLayout(new BorderLayout());
        jPanel1.add(panel,BorderLayout.NORTH);
        
        pack();
        repaint();
        
    }                                        

